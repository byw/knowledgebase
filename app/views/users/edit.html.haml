=form_for @user do |f|
  =f.error_messages
  =f.text_field :name, placeholder: 'name'
  =f.text_field :email, placeholder: 'email'
  =f.submit 'Update User'

=form_for @user do |f|
  =f.error_messages
  =f.password_field :password
  =f.password_field :password_confirmation

  =f.submit 'Change Password'
